{
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es7"]
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": ["node_modules", "lib", "es"]
}
